<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="INotify.View.AllPackageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:INotify.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:model="using:INotify.KToastView.Model"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ToastResources.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="PackageProfileItemTemplate" x:DataType="model:KPackageProfileVObj">
                <Grid
                    Margin="0,4"
                    Padding="12"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Selection CheckBox  -->
                    <CheckBox
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Checked="AppCheckBox_Checked"
                        IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                        Tag="{x:Bind}"
                        Unchecked="AppCheckBox_Unchecked" />

                    <!--  App Icon  -->
                    <Border
                        Grid.Column="1"
                        Width="32"
                        Height="32"
                        Margin="8,0"
                        HorizontalAlignment="Left"
                        Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                        CornerRadius="4">
                        <FontIcon
                            FontSize="16"
                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                            Glyph="&#xE8FA;" />
                    </Border>

                    <!--  App Information  -->
                    <StackPanel
                        Grid.Column="2"
                        Margin="8,0"
                        HorizontalAlignment="Left">
                        <TextBlock
                            FontWeight="SemiBold"
                            MaxLines="1"
                            Text="{x:Bind DisplayName, Mode=OneWay}"
                            TextTrimming="CharacterEllipsis" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                            MaxLines="1"
                            Text="{x:Bind Publisher, Mode=OneWay}"
                            TextTrimming="CharacterEllipsis" />
                    </StackPanel>

                    <!--  Priority Status  -->
                    <StackPanel
                        Grid.Column="3"
                        Margin="8,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Right"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Text="{x:Bind PriorityText, Mode=OneWay}" />
                    </StackPanel>
                </Grid>
            </DataTemplate>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <ListView
            x:Name="PackageListView"
            ItemTemplate="{StaticResource PackageProfileItemTemplate}"
            ItemsSource="{x:Bind _VM.PackageProfiles, Mode=OneWay}" />

    </Grid>
</UserControl>
