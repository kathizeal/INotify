<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="INotify.KToastView.View.KToastListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entity="using:INotifyLibrary.Model.Entity"
    xmlns:local="using:INotify.KToastView.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:INotify.KToastView.Model"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="NormalTextStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="4" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="ViewTypeBt" Content="View Type">
            <Button.Flyout>
                <MenuFlyout>
                    <MenuFlyoutItem
                        x:Name="All"
                        Click="All_Click"
                        Text="All" />
                    <MenuFlyoutItem
                        x:Name="Space"
                        Click="Space_Click"
                        Text="Space" />
                    <MenuFlyoutItem
                        x:Name="Priority"
                        Click="Priority_Click"
                        Text="Priority" />
                    <MenuFlyoutItem
                        x:Name="AppBy"
                        Click="AppBy_Click"
                        Text="AppBy" />
                </MenuFlyout>
            </Button.Flyout>
        </Button>
        <ListView
            x:Name="ToastItems"
            Grid.Row="1"
            ItemsSource="{x:Bind _VM.KToastNotifications, Mode=OneWay}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:KToastVObj">
                    <StackPanel
                        HorizontalAlignment="Left"
                        BorderBrush="Salmon"
                        BorderThickness="0"
                        Orientation="Vertical">
                        <Image
                            Width="64"
                            Height="64"
                            HorizontalAlignment="Left"
                            Source="{x:Bind AppIcon, Mode=OneWay}" />
                        <StackPanel HorizontalAlignment="Left">
                            <TextBlock
                                HorizontalAlignment="Left"
                                FontWeight="Bold"
                                Text="{x:Bind ToastPackageProfile.AppDisplayName, Mode=OneWay}" />
                            <TextBlock Text="{x:Bind NotificationData.NotificationMessage, Mode=OneWay}" TextWrapping="Wrap" />
                            <TextBlock Text="{x:Bind NotificationData.DisplayTime, Mode=OneWay}" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
