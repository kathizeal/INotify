<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="INotify.View.AllPackageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:INotify.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:INotify.KToastView.Model"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ToastResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="PackageProfileItemTemplate" x:DataType="model:KPackageProfileVObj">
                <Border
                    Margin="0,4"
                    Padding="16,12"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="6">
                    
                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  App Information Section (Left Side)  -->
                        <StackPanel
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Spacing="2">
                            
                            <!--  Primary: App Display Name  -->
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="{x:Bind DisplayName, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap" />
                            
                            <!--  Secondary: Publisher  -->
                            <TextBlock
                                FontSize="12"
                                FontWeight="Normal"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{x:Bind Publisher, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap" />
                            
                            <!--  Secondary: Package Family Name  -->
                            <TextBlock
                                FontSize="11"
                                FontWeight="Normal"
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                Text="{x:Bind PackageFamilyName, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap" />
                        </StackPanel>

                        <!--  Sound Configuration Section (Right Side)  -->
                        <StackPanel
                            Grid.Column="1"
                            Margin="16,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">

                            <!--  Sound Selection ComboBox  -->
                            <ComboBox
                                x:Name="SoundSelectionComboBox"
                                MinWidth="160"
                                MaxWidth="200"
                                VerticalAlignment="Center"
                                PlaceholderText="{x:Bind NotificationSoundText, Mode=OneWay}"
                                SelectionChanged="SoundSelectionComboBox_SelectionChanged"
                                Tag="{x:Bind}">
                                
                                <!--  Default Option  -->
                                <ComboBoxItem Content="Default" Tag="None" />

                                <!--  Custom Sounds (from Assets)  -->
                                <ComboBoxItem Content="Cora" Tag="Cora" />
                                <ComboBoxItem Content="Cue" Tag="Cue" />
                                <ComboBoxItem Content="Celesta" Tag="Celesta" />
                                <ComboBoxItem Content="Hail" Tag="Hail" />
                                <ComboBoxItem Content="Bell" Tag="Bell" />
                                <ComboBoxItem Content="Pac" Tag="Pac" />
                                <ComboBoxItem Content="Ting" Tag="Ting" />
                                <ComboBoxItem Content="Triangle" Tag="Triangle" />
                                <ComboBoxItem Content="Wink" Tag="Wink" />
                                <ComboBoxItem Content="Heavenly" Tag="Heavenly" />
                                <ComboBoxItem Content="Violin Ping" Tag="ViolinPing" />
                                <ComboBoxItem Content="Reverberate" Tag="Reverberate" />
                                <ComboBoxItem Content="Speedy" Tag="Speedy" />
                                <ComboBoxItem Content="Musicbox Duo" Tag="MusicboxDuo" />
                                <ComboBoxItem Content="Musicbox Triplet" Tag="MusicboxTriplet" />

                                <!--  System Sounds  -->
                                <ComboBoxItem Content="System Default" Tag="SystemDefault" />
                                <ComboBoxItem Content="System IM" Tag="SystemIM" />
                                <ComboBoxItem Content="System Mail" Tag="SystemMail" />
                                <ComboBoxItem Content="System Reminder" Tag="SystemReminder" />
                                <ComboBoxItem Content="System SMS" Tag="SystemSMS" />
                                <ComboBoxItem Content="System Alarm" Tag="SystemAlarm" />
                                <ComboBoxItem Content="System Alarm 2" Tag="SystemAlarm2" />
                                <ComboBoxItem Content="System Alarm 3" Tag="SystemAlarm3" />
                                <ComboBoxItem Content="System Alarm 4" Tag="SystemAlarm4" />
                                <ComboBoxItem Content="System Alarm 5" Tag="SystemAlarm5" />
                                <ComboBoxItem Content="System Alarm 6" Tag="SystemAlarm6" />
                                <ComboBoxItem Content="System Alarm 7" Tag="SystemAlarm7" />
                                <ComboBoxItem Content="System Alarm 8" Tag="SystemAlarm8" />
                                <ComboBoxItem Content="System Alarm 9" Tag="SystemAlarm9" />
                                <ComboBoxItem Content="System Alarm 10" Tag="SystemAlarm10" />
                                <ComboBoxItem Content="System Call" Tag="SystemCall" />
                                <ComboBoxItem Content="System Call 2" Tag="SystemCall2" />
                                <ComboBoxItem Content="System Call 3" Tag="SystemCall3" />
                                <ComboBoxItem Content="System Call 4" Tag="SystemCall4" />
                                <ComboBoxItem Content="System Call 5" Tag="SystemCall5" />
                                <ComboBoxItem Content="System Call 6" Tag="SystemCall6" />
                                <ComboBoxItem Content="System Call 7" Tag="SystemCall7" />
                                <ComboBoxItem Content="System Call 8" Tag="SystemCall8" />
                                <ComboBoxItem Content="System Call 9" Tag="SystemCall9" />
                                <ComboBoxItem Content="System Call 10" Tag="SystemCall10" />
                            </ComboBox>

                            <!--  Test Sound Button  -->
                            <Button
                                x:Name="TestSoundButton"
                                Width="36"
                                Height="36"
                                Padding="0"
                                VerticalAlignment="Center"
                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                BorderThickness="0"
                                Click="TestSoundButton_Click"
                                CornerRadius="18"
                                Tag="{x:Bind}"
                                ToolTipService.ToolTip="Test notification sound">
                                
                                <Button.Resources>
                                    <StaticResource x:Key="ButtonBackgroundPointerOver" ResourceKey="AccentFillColorSecondaryBrush" />
                                    <StaticResource x:Key="ButtonBackgroundPressed" ResourceKey="AccentFillColorTertiaryBrush" />
                                </Button.Resources>
                                
                                <FontIcon
                                    FontSize="14"
                                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                    Glyph="&#xE767;" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Padding="16">
        <ListView
            x:Name="PackageListView"
            HorizontalAlignment="Stretch"
            ItemTemplate="{StaticResource PackageProfileItemTemplate}"
            ItemsSource="{x:Bind _VM.PackageProfiles, Mode=OneWay}"
            SelectionMode="None"
            ShowsScrollingPlaceholders="True"
            IncrementalLoadingThreshold="5">
            
            <!-- Enable smooth transitions -->
            <ListView.ItemContainerTransitions>
                <TransitionCollection>
                    <AddDeleteThemeTransition />
                    <ContentThemeTransition />
                    <ReorderThemeTransition />
                    <EntranceThemeTransition IsStaggeringEnabled="True" />
                </TransitionCollection>
            </ListView.ItemContainerTransitions>
            
            <!-- Custom item container style for better performance -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="MinHeight" Value="0" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="UseSystemFocusVisuals" Value="False" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter 
                                    x:Name="Root"
                                    Background="{TemplateBinding Background}"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    ContentTransitions="{TemplateBinding ContentTransitions}"
                                    HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                    RenderTransformOrigin="0.5,0.5">
                                    
                                    <ContentPresenter.RenderTransform>
                                        <CompositeTransform />
                                    </ContentPresenter.RenderTransform>
                                    
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal" />
                                            <VisualState x:Name="PointerOver">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}" />
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="Pressed">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Background" Value="{ThemeResource SubtleFillColorTertiaryBrush}" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </ContentPresenter>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            
            <!-- Enable item panel virtualization -->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel 
                        VirtualizationMode="Recycling"
                        Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
    </Grid>
</UserControl>