<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="INotify.View.AllPackageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:INotify.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:INotify.KToastView.Model"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ToastResources.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="PackageProfileItemTemplate" x:DataType="model:KPackageProfileVObj">
                <Grid
                    Margin="0,4"
                    Padding="12"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Selection CheckBox  -->
                    <CheckBox
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Checked="AppCheckBox_Checked"
                        IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                        Tag="{x:Bind}"
                        Unchecked="AppCheckBox_Unchecked" />

                    <!--  App Icon  -->
                    <Border
                        Grid.Column="1"
                        Width="32"
                        Height="32"
                        Margin="8,0"
                        HorizontalAlignment="Left"
                        Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                        CornerRadius="4">
                        <FontIcon
                            FontSize="16"
                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                            Glyph="&#xE8FA;" />
                    </Border>

                    <!--  App Information  -->
                    <StackPanel
                        Grid.Column="2"
                        Margin="8,0"
                        HorizontalAlignment="Left">
                        <TextBlock
                            FontWeight="SemiBold"
                            MaxLines="1"
                            Text="{x:Bind DisplayName, Mode=OneWay}"
                            TextTrimming="CharacterEllipsis" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                            MaxLines="1"
                            Text="{x:Bind Publisher, Mode=OneWay}"
                            TextTrimming="CharacterEllipsis" />
                    </StackPanel>

                    <!--  Sound Selection and Priority Status  -->
                    <StackPanel
                        Grid.Column="3"
                        Margin="8,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Spacing="4">

                        <!--  Sound Selection Row  -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <!--  Sound Selection ComboBox  -->
                            <ComboBox
                                x:Name="SoundSelectionComboBox"
                                MinWidth="120"
                                HorizontalAlignment="Right"
                                Header="Notification Sound"
                                PlaceholderText="{x:Bind NotificationSoundText, Mode=OneWay}"
                                SelectionChanged="SoundSelectionComboBox_SelectionChanged"
                                Tag="{x:Bind}">
                                <!--  Default  -->
                                <ComboBoxItem Content="Default" Tag="None" />

                                <!--  Custom Sounds (from Assets)  -->
                                <ComboBoxItem Content="Cora" Tag="Cora" />
                                <ComboBoxItem Content="Cue" Tag="Cue" />
                                <ComboBoxItem Content="Celesta" Tag="Celesta" />
                                <ComboBoxItem Content="Hail" Tag="Hail" />
                                <ComboBoxItem Content="Bell" Tag="Bell" />
                                <ComboBoxItem Content="Pac" Tag="Pac" />
                                <ComboBoxItem Content="Ting" Tag="Ting" />
                                <ComboBoxItem Content="Triangle" Tag="Triangle" />
                                <ComboBoxItem Content="Wink" Tag="Wink" />
                                <ComboBoxItem Content="Heavenly" Tag="Heavenly" />
                                <ComboBoxItem Content="Violin Ping" Tag="ViolinPing" />
                                <ComboBoxItem Content="Reverberate" Tag="Reverberate" />
                                <ComboBoxItem Content="Speedy" Tag="Speedy" />
                                <ComboBoxItem Content="Musicbox Duo" Tag="MusicboxDuo" />
                                <ComboBoxItem Content="Musicbox Triplet" Tag="MusicboxTriplet" />

                                <!--  System Sounds  -->
                                <ComboBoxItem Content="System Default" Tag="SystemDefault" />
                                <ComboBoxItem Content="System IM" Tag="SystemIM" />
                                <ComboBoxItem Content="System Mail" Tag="SystemMail" />
                                <ComboBoxItem Content="System Reminder" Tag="SystemReminder" />
                                <ComboBoxItem Content="System SMS" Tag="SystemSMS" />
                                <ComboBoxItem Content="System Alarm" Tag="SystemAlarm" />
                                <ComboBoxItem Content="System Alarm 2" Tag="SystemAlarm2" />
                                <ComboBoxItem Content="System Alarm 3" Tag="SystemAlarm3" />
                                <ComboBoxItem Content="System Alarm 4" Tag="SystemAlarm4" />
                                <ComboBoxItem Content="System Alarm 5" Tag="SystemAlarm5" />
                                <ComboBoxItem Content="System Alarm 6" Tag="SystemAlarm6" />
                                <ComboBoxItem Content="System Alarm 7" Tag="SystemAlarm7" />
                                <ComboBoxItem Content="System Alarm 8" Tag="SystemAlarm8" />
                                <ComboBoxItem Content="System Alarm 9" Tag="SystemAlarm9" />
                                <ComboBoxItem Content="System Alarm 10" Tag="SystemAlarm10" />
                                <ComboBoxItem Content="System Call" Tag="SystemCall" />
                                <ComboBoxItem Content="System Call 2" Tag="SystemCall2" />
                                <ComboBoxItem Content="System Call 3" Tag="SystemCall3" />
                                <ComboBoxItem Content="System Call 4" Tag="SystemCall4" />
                                <ComboBoxItem Content="System Call 5" Tag="SystemCall5" />
                                <ComboBoxItem Content="System Call 6" Tag="SystemCall6" />
                                <ComboBoxItem Content="System Call 7" Tag="SystemCall7" />
                                <ComboBoxItem Content="System Call 8" Tag="SystemCall8" />
                                <ComboBoxItem Content="System Call 9" Tag="SystemCall9" />
                                <ComboBoxItem Content="System Call 10" Tag="SystemCall10" />
                            </ComboBox>

                            <!--  Test Sound Button  -->
                            <Button
                                x:Name="TestSoundButton"
                                Width="32"
                                Height="32"
                                Padding="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="1"
                                Click="TestSoundButton_Click"
                                CornerRadius="4"
                                Tag="{x:Bind}"
                                ToolTipService.ToolTip="Test this sound">
                                <FontIcon
                                    FontSize="14"
                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                    Glyph="&#xE767;" />
                            </Button>
                        </StackPanel>

                        <!--  Priority Status  -->
                        <TextBlock
                            HorizontalAlignment="Right"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Text="{x:Bind PriorityText, Mode=OneWay}" />
                    </StackPanel>
                </Grid>
            </DataTemplate>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <ListView
            x:Name="PackageListView"
            ItemTemplate="{StaticResource PackageProfileItemTemplate}"
            ItemsSource="{x:Bind _VM.PackageProfiles, Mode=OneWay}" />

    </Grid>
</UserControl>
