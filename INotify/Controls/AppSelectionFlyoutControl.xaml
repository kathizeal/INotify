<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="INotify.Controls.AppSelectionFlyoutControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:INotify.KToastView.Model"
    mc:Ignorable="d">

    <UserControl.Resources>

        <Style x:Key="StretchingListViewItemStyle"
           TargetType="ListViewItem"
           BasedOn="{StaticResource ListViewItemRevealStyle}">
            <Setter Property="HorizontalContentAlignment"
                Value="Stretch"/>
        </Style>
        <!--  App Selection Item Template  -->
        <DataTemplate x:Key="AppSelectionItemTemplate" x:DataType="model:KPackageProfileVObj">
            <Grid
                Margin="0,4"
                Padding="12"
                HorizontalAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Selection CheckBox  -->
                <CheckBox
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Checked="AppCheckBox_Checked"
                    IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                    Tag="{x:Bind}"
                    Unchecked="AppCheckBox_Unchecked" />

                <!--  App Icon  -->
                <Border
                    Grid.Column="1"
                     HorizontalAlignment="Left"
                    Width="32"
                    Height="32"
                    Margin="8,0"
                    Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="4">
                    <FontIcon
                        FontSize="16"
                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        Glyph="&#xE8FA;" />
                </Border>

                <!--  App Information  -->
                <StackPanel Grid.Column="2"  HorizontalAlignment="Left" Margin="8,0">
                    <TextBlock
                        FontWeight="SemiBold"
                        MaxLines="1"
                        Text="{x:Bind DisplayName}"
                        TextTrimming="CharacterEllipsis" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        MaxLines="1"
                        Text="{x:Bind Publisher}"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>

                <!--  Priority Status  -->
                <StackPanel
                    Grid.Column="3"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Right"
                        FontSize="11"
                        FontWeight="SemiBold"
                        Text="{x:Bind PriorityText}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Width="550" Height="550">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            x:Name="HeaderText"
            Grid.Row="0"
            Margin="0,0,0,12"
            FontSize="16"
            FontWeight="SemiBold"
            Text="Add Apps" />

        <!--  Search Box  -->
        <TextBox
            x:Name="SearchBox"
            Grid.Row="1"
            Margin="0,0,0,12"
            PlaceholderText="Search applications..."
            TextChanged="SearchBox_TextChanged" />

        <!--  Apps List  -->
        <ListView
            x:Name="AppsList"
            Grid.Row="2"

 ItemContainerStyle="{StaticResource StretchingListViewItemStyle}"            ItemTemplate="{StaticResource AppSelectionItemTemplate}"
            SelectionMode="None" />

        <!--  Selection Status  -->
        <TextBlock
            x:Name="SelectionStatus"
            Grid.Row="3"
            Margin="0,8,0,8"
            FontSize="12"
            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
            Text="0 apps selected" />

        <!--  Action Buttons  -->
        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="8">
            <Button
                x:Name="CancelButton"
                Click="CancelButton_Click"
                Content="Cancel" />
            <Button
                x:Name="AddButton"
                Click="AddButton_Click"
                Content="Add Selected"
                IsEnabled="False"
                Style="{StaticResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>